{
  "build": {
    "env": {
      "BUNDLER_VERSION": "2.3.26"
    }
  },
  "builds": [
    {
      "src": "api/**/*.rb",
      "use": "@vercel/ruby",
      "config": {
        "zeroConfig": true,
        "includeFiles": "**"
      }
    },
    {
      "src": "Gemfile",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true,
        "includeFiles": "**",
        "installCommand": "gem install bundler && bundle install",
        "buildCommand": "bundle exec jekyll build",
        "outputDirectory": "_site"
      }
    }
  ],
  "routes": [
    {
      "src": "/$",
      "dest": "/index.html"
    },
    {
      "src": "/about$",
      "dest": "/about.html"
    },
    {
      "src": "/blog$",
      "dest": "/blog.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
}
